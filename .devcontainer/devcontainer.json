{
  "name": "java-21-dev",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",
  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot",
        "gabrielbb.vscode-lombok",
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph",
        "redhat.vscode-xml"
      ]
    }
  },

  "containerEnv": {
    "DB_HOST": "host.docker.internal",
    "DB_PORT": "3306",
    "DB_NAME": "appdb",
    "DB_USER": "appuser",
    "DB_PASS": "apppass"
  },

  "forwardPorts": [8080]
}
